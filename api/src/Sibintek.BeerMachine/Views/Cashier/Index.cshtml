@model string
<!DOCTYPE html>

<html>
<head>
    <title>Ручное списание</title>
</head>
<body>
<div>
    <h2>Ручное списание</h2>

    @if (!string.IsNullOrEmpty(Model))
    {
        <p>@Html.Raw(Model.Replace(Environment.NewLine, "<br />"))</p>
    }

    <form method="post">
        Кошелек:<br>
        <input type="number" min="1" max="500" id="wallet" name="wallet" value="">
        <br>
        Сумма:<br>
        <input type="number" min="1" max="450" id="amount" name="amount" value="">
        <br><br>
        <input type="submit" value="Оплатить">
    </form>
</div>
</body>
</html>