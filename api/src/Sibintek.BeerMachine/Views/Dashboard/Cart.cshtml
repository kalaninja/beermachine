@{
    ViewData["Title"] = "Shopping cart";
}


@section Scripts{
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/components.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/cart.js"></script>
}

<style>
    body { background-color: #eee; }

    #TOP { padding-bottom: 100px; }

    .total { font-size: 15pt; }
</style>

<div id="root" class="row justify-content-md-center">
    <div id="TOP">
        <div class="d-flex align-items-center">
            <div class="p-1 flex-shrink-1">
                <img class="logo" src="~/img/sib_logo.svg"/>
            </div>
            <div class="p-2 w-100 align-content-center">
                <div class="label-container">
                    <h4 class="label" style="padding-top: 10px">ЦИФРОВОЙ КЛАСТЕР. Умный магазин с BLOCKCHAIN-кошельком</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8" v-if="purchaseResult.status == 0 || purchaseResult.status == 1">
        <cart-header
            v-bind:count="purchaseResult.shoppingCart.count">
        </cart-header>
        <cart-empty
            v-bind:isEmpty="purchaseResult.shoppingCart.isEmpty" v-if="purchaseResult.shoppingCart.isEmpty">
        </cart-empty>

        <ul class="list-group mb-3">
            <cart-product
                v-for="item in purchaseResult.shoppingCart.items"
                v-bind:item="item">
            </cart-product>
            <cart-total v-bind:total="purchaseResult.shoppingCart.total" v-if="!purchaseResult.shoppingCart.isEmpty">
            </cart-total>
        </ul>
    </div>
    
    <div v-if="purchaseResult.status == 0">
        <div class="row" >
            <div class="col-md-4">Хэш транзакции:</div>
            <div class="col-md-6">{{purchaseResult.transactionHash}}</div>
        </div>
        <div class="row" v-if="purchaseResult.status == 0">
            <div class="col-md-4">Покупатель:</div>
            <div class="col-md-6">{{purchaseResult.customer}}</div>
        </div>
        <div class="row" v-if="purchaseResult.status == 0">
            <div class="col-md-4">Остоток:</div>
            <div class="col-md-6">{{purchaseResult.walletBalance}}</div>
        </div>
    </div>
    
    <div v-if="purchaseResult.status == 1" class="row">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-6">{{purchaseResult.errorDescription}}</div>
        </div>
        <div class="row">
            <div class="col-md-4">Остаток:</div>
            <div class="col-md-6">{{purchaseResult.walletBalance}}</div>
        </div>
    </div>
    
    <div class="col-md-6 order-md-2 mb-4" v-if="purchaseResult.status == 2">
        <div>{{purchaseResult.errorDescription}}</div>
    </div>
</div>