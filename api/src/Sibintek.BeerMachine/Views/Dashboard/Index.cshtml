@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Beermachine dashboard";
}

@section Scripts{
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/chartjs/dist/Chart.min.js"></script>
    <script src="~/js/components.js?v2"></script>
    <script src="~/js/app.js?v2"></script>
    <script src="~/js/cart.js?v2"></script>
    <script src="~/js/dashboard.js?v2"></script>
}

<style>
    #TOP {
        position: fixed;
        width: 100%;
        height: 6%;
        top: 0;
        left: 0;
    }
    
    #TOP .container {
        max-width: 100%;
    }

    #N1 {
        position: fixed;
        width: 25%;
        height: 47%;
        top: 6%;
        left: 0;
        background: transparent;
        padding-left: 20px;
        padding-right: 0px;
        padding-top: 20px;
        padding-bottom: 0px;
    }
    
    #N2 {
        position: fixed;
        width: 25%;
        height: 47%;
        top: 6%;
        left: 25%;
        background: transparent;
        padding-left: 20px;
        padding-right: 0px;
        padding-top: 20px;
        padding-bottom: 0px;
    }
    
    #N3 {
        position: fixed;
        width: 25%;
        height: 47%;
        top: 6%;
        left: 50%;
        background: transparent;
        padding-left: 20px;
        padding-right: 0px;
        padding-top: 20px;
        padding-bottom: 0px;
    }

    #N4 {
        position: fixed;
        width: 25%;
        height: 47%;
        top: 6%;
        left: 75%;
        background: transparent;
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 20px;
        padding-bottom: 0px;
    }
    
    #SW {
        position: fixed;
        width: 35%;
        height: 47%;
        top: 53%;
        left: 0;
        background: transparent;
        padding-top: 20px;
        padding-left: 20px;
        padding-bottom: 20px;
    }

    #SE {
        position: fixed;
        width: 65%;
        height: 47%;
        top: 53%;
        left: 35%;
        background: transparent;
        padding: 20px;
    }
    
    body {
        background-color: #eee;
    }

    /* #SE, #SW { border-top: 1px solid #ffd031; } */

    /* #NE, #SE { border-left: 1px solid #ffd031; } */
    
    .bg-header {
        opacity: 0.5;
    }
    
    .logo {
        padding-left: 100px;       
    }
    
    .logo-2 {
        height: 55px;
    }
    
    .label-container {
        padding-left: 100px;
        padding-top: 5px;
    }
    
    .widget {
        background-color: #fff;
        margin-bottom: 25px;
        width: 100%;
        height: 100%;
        border-radius: 3px;
    }
    
    .widget table {
        width: 100%;
        border-top: 0px;
    }
    
    .widget table td,th {
        padding-left: 20px;
        border-top: 0px;
    }
    
    .widget table tr:nth-child(odd) {
        background: #f5f5f5
    }
    
    .widget table th{
        background: #fff;
    }
    
    .widget table th {
        border-top: 0px;
        padding-left: 20px;
    }
    
    .widget .label {
        padding-top: 20px;
        padding-left: 20px;
        padding-bottom: 10px;
    }
    
    .сart,.total { font-size: 12pt; }
    
    .total .row {
        padding-top: 14px;
    }
    
    .text-centered {
        text-align: center;
        vertical-align: middle;
    }
    
    .top-side{
        font-size: 70%;
    }
    
    .node-green {
        width:10px;
        height: 10px;
        background:green;
        display:inline-block;
        margin-left: 3px;
    }
    
    .node-red {
        width:10px;
        height: 10px;
        background:red;
        display:inline-block;
        margin-left: 3px;
    }
    
    .empty-shopping-cart {
        text-align: center;
        height: 100%;
        width: 100%;
    }
    
    .empty-cart-img {
        width: 300px;
        opacity: 0.3;
    }
   
</style>
<div id="root">
    <div id="TOP">
        <div class="d-flex align-items-center">
            <div class="p-1 flex-shrink-1">
                <img class="logo" style="" src="~/img/sib_logo.svg"/>
            </div>
            <div class="p-2 w-100 align-content-center text-centered">
                <h4 class="label">Умный магазин с BLOCKCHAIN-кошельком</h4>
            </div>
            <div class="p-1 flex-shrink-1">
                <img class="logo-2" style="" src="~/img/logo_digit.png"/>
            </div>
            <div class="p-3 top-side"><div>Время последнего обновления: {{dashboardData.reportDateDisplayString}}</div>
                <div>
                    <div v-for="key in dashboardData.nodeStatuses" v-bind:class="[key===true? 'node-green':'node-red']"></div>
                </div>
            </div>
        </div>
    </div>
    <div id="N1">
        <div class="widget">
            <h4 class="text-muted label">Заработанные Участниками баллы</h4>
            <div class="container h-100" style="margin-top: -40px;">
                <div class="row h-100">
                    <div class="col align-self-center">
                        <canvas id="firstChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="N2">
        <div class="widget">
            <h4 class="text-muted label">Потраченные участниками баллы</h4>
            <div class="container h-100" style="margin-top: -40px;">
                <div class="row h-100">
                    <div class="col align-self-center">
                        <canvas id="secondChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="N3">
        <div class="widget">
            <h4 class="text-muted label">Участники с самым большим балансом</h4>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Имя участника</th>
                        <th>Баланс</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr is="customer-row" v-for="(item, index) in dashboardData.topRich" v-bind:customer="item" v-bind:index="index"></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="N4">
        <div class="widget">
            <h4 class="text-muted label">Участники, потратившие больше всех</h4>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Имя участника</th>
                        <th>Баланс</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr is="buyer-row" v-for="(item,index) in dashboardData.topBuyers" v-bind:customer="item" v-bind:index="index"></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="SW">
        <div class="widget">
        <h4 class="text-muted label">Последняя покупка в Умном магазине</h4>
            <div class="container сart">
                <div v-if="!successPurchase.shoppingCart.isEmpty">
                    <table v-if="!successPurchase.shoppingCart.isEmpty">
                        <tr>
                            <th>Товар</th>
                            <th>Количество</th>
                            <th>Стоимость, sibcoin</th>
                        </tr>
                        <tr is="purchase-product" v-for="item in successPurchase.shoppingCart.items" v-bind:item="item"></tr>
                        <tr>
                            <td><b>Итого</b></td>
                            <td></td>
                            <td>{{purchaseResult.shoppingCart.total}}</td>
                        </tr>
                    </table>
                    <div class="col-md-10 total">
                        <div class="row">
                            <div class="col-md-10">Хэш транзакции:
                                <small> {{successPurchase.transactionHash}}</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">Покупатель: </div>
                            <div class="col-md-6">{{successPurchase.customer}}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">Текущий остаток: </div>
                            <div class="col-md-6">{{successPurchase.walletBalance}}</div>
                        </div>
                    </div>
                </div>
                <cart-empty-dashboard v-bind:isEmpty="successPurchase.shoppingCart.isEmpty" v-if="successPurchase.shoppingCart.isEmpty">
                </cart-empty-dashboard>
            </div>
        </div>
    </div>
    <div id="SE">
        <div class="widget">
            <h4 class="label text-muted">Последние транзакции участников в BLOCKCHAIN</h4>
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Номер блока</th>
                    <th>Хэш</th>
                    <th>Номер кошелька Участника</th>
                    <th>Тип транзакции</th>
                    <th>Сумма транзакции</th>
                </tr>
                </thead>
                <tbody>
                <tr is="transaction-row" v-for="(item, index) in dashboardData.transactions" v-bind:transaction="item" v-bind:index="index"></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>